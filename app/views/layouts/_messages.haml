- flash.each do |name, msg|
  - if msg.is_a?(String)
    - if name == :notice
      - class_name = "alert-success"
    - elsif name == :warning
      - class_name = "alert-warning"
    - else
      - class_name = "alert-danger"
    .alert.alert-dismissable{class: class_name}
