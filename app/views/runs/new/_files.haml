= r.label "Test suite name:"
= r.text_field :title, :class => "form-control", :value => "Default suite"
%br
= r.label "Streams counter:"
= r.text_field :threads, value: 1, class: "form-control", type: "number", min: 1
%br
= Run.render_hash(@files).html_safe

:javascript
  $('.folder').next().hide()
  $('.folder').click(function(){
    var $status = $(this).prev()
    var $list = $(this).next()
    if($status.is('.arrow-right')) {
      $status.attr('class','arrow-down')
    } else {
      $status.attr('class','arrow-right')
    }
    $list.toggle('slow');
  })
  $('.checkbox').next().click(function(){
    $(this).prev().trigger('click')
  })